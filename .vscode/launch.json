{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/backend/server.js",
            "env": {
                "NODE_ENV": "development"
            },
            "runtimeArgs": ["--experimental-modules"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend"
        },
        {
            "name": "Debug Backend (with nodemon)",
            "type": "node", 
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "restart": true
        }
    ],
    "compounds": [
        {
            "name": "Debug Full Stack",
            "configurations": [
                "Debug Backend"
            ],
            "stopAll": true,
            "preLaunchTask": "Start Frontend Only"
        }
    ]
}